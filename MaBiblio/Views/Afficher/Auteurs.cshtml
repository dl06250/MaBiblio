@model List<MaBiblio.Models.Auteur>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des auteurs</title>
    <style type="text/css">
        table {
            border-collapse: collapse;
            padding: 4px;
        }

        td, th {
            border: 1px solid black;
            padding: 4px;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Nom</th>
        </tr>    
        @foreach (var auteur in Model) 
        {
            <tr>
                <td>@auteur.Id</td>
                <td>@auteur.Nom</td>
            </tr>
        }
    </table>
</body>
</html>
